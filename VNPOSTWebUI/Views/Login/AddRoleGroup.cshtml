
@model VNPOSTWebUILibrary.Model.DataSendToClient.RolesForList

@{
    ViewBag.Title = "Thêm nhóm người dùng";
    string action = ViewBag.Action == "/Login/UpdateRoleGroup" ? ViewBag.Action : "/Login/AddRoleGroup";
}

@section myJs {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/node_modules/sweetalert2/dist/sweetalert2.all.min.js"></script>
    <script src="~/js/AddRoleGroup.js"></script>
}

@section myCss {
    <link href="~/css/AddRoleGroup.css" rel="stylesheet" />
}

<div id="outer">
    <div id="inner">
        <form action="@action" method="post">
            <input asp-for="Id" style="display:none"/>
            <div class="form-group">
                <label asp-for="Name">Tên nhóm</label>
                @if (ViewBag.Action == "View")
                {
                    <input asp-for="Name" class="form-control" readonly />
                }
                else
                {
                    <input asp-for="Name" class="form-control" />
                }
            <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label for="application-range">Phạm vi hệ thống: </label>
                <select id="application-range" class="form-control" disabled>
                    <option>MCAS</option>
                </select>
            </div>
            @if (ViewBag.Action != "View")
            {
                <input type="submit" class="btn btn-primary" value="Lưu lại" />
            }
            <a href="@Url.Action("ManageRoleGroup")" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>