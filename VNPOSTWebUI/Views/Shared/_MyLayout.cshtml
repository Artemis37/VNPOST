<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!--Roboto font-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">


    <!--font awesome icon-->
    <script src="https://kit.fontawesome.com/f4d41ac120.js" crossorigin="anonymous"></script>
    <!--add bootstrap css-->
    <link href="~/lib/plugins/bootstrap.min.css" rel="stylesheet" />
    <!--Add tiynmce-->
    <script src="~/lib/plugins/tinymce/tinymce.js"></script>
    <script>
        tinymce.init({
            selector: '#Content',
            width: 600,
            height: 300,
            plugins: [
                'advlist autolink link image lists charmap print preview hr anchor pagebreak',
                'searchreplace wordcount visualblocks visualchars code fullscreen insertdatetime media nonbreaking',
                'table emoticons template paste help'
            ],
            toolbar: 'undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | ' +
                'bullist numlist outdent indent | link image | print preview media fullscreen | ' +
                'forecolor backcolor emoticons | help',
            menu: {
                favs: { title: 'My Favorites', items: 'code visualaid | searchreplace | emoticons' }
            },
            menubar: 'favs file edit view insert format tools table help',
            content_css: 'css/content.css',
            paste_data_images: true
        });
    </script>
    <!--my css-->
    <link href="~/css/Index.css" rel="stylesheet" />
    @if (IsSectionDefined("myCss"))
    {
        @RenderSectionAsync("myCss", required: false);
    }
</head>
<body>
    <header class="container-fluid">
        <!--header upper line-->
        <div class="container-fluid d-flex justify-content-around align-items-center" id="upper-header">
            <div class="" id="header-contact">
                <span><i class="fas fa-phone-alt" style="margin-right:6px;"></i>Đường dây nóng hỗ trợ <b>1900 54 54 81</b></span>
            </div>
            <div class="d-flex justify-content-center align-items-center" id="header-nav">
                <ul>
                    <li><a href="#">Giới thiệu</a></li>
                    <li><a href="#">Hỏi đáp</a></li>
                    <li><a href="#">Liên hệ</a></li>
                    <partial name="_LoginVNPost" />
                </ul>
                <div class="language-object">
                    <a href="#"><img src="~/Images/vi-VN.gif" title="Tiếng Việt (Vietnamese)" /></a>
                    <a href="#"><img src="~/Images/en-US.gif" title="Tiếng Anh (English)" /></a>
                </div>
                <div class="" id="upper-header-search">
                    <span><i class="fas fa-search"></i></span>
                    <input type="text" name="searchKey" placeholder="Tìm kiếm" />
                </div>
            </div>
        </div>
        <!--header body-->
        <div class="container-fluid d-flex justify-content-around align-items-center" id="body-header">
            <a href="~/" id="logo-image">
                <img src="~/Images/vnpost-logo.png" />
            </a>
            <div id="body-header-icon" class="d-flex">
                <!--icon 1-->
                <div id="header-icon1" class="header-icon-decor">
                    <a href="#" class="d-flex">
                        <div class="orange-circle-border">
                            <img src="~/Images/search-price.png" />
                        </div>
                        <div class="header-icon-title">
                            <span><b>Tra cước</b></span>
                            <span>DỊCH VỤ</span>
                        </div>
                    </a>
                </div>
                <!--icon 2-->
                <div id="header-icon1" class="header-icon-decor">
                    <a href="#" class="d-flex">
                        <div class="orange-circle-border">
                            <img src="~/Images/mess.png" />
                        </div>
                        <div class="header-icon-title">
                            <span><b>Đánh giá &</b></span>
                            <span>KHIẾU NẠI</span>
                        </div>
                    </a>
                </div>
                <!--icon 3-->
                <div id="header-icon1" class="header-icon-decor">
                    <a href="#" class="d-flex">
                        <div class="orange-circle-border">
                            <img src="~/Images/recruitment.png" />
                        </div>
                        <div class="header-icon-title">
                            <span><b>Tin</b></span>
                            <span>TUYỂN DỤNG</span>
                        </div>
                    </a>
                </div>
            </div>
        </div> <!--end header body-->

        <div class="container-fluid" id="header-navbar">
            <!--header navbar-->
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <!--toggle navbar button-->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-center" id="navbarContent">
                    <ul class="navbar-nav">
                        <li class="nav-item" id="header-navbar-dropdown">
                            <a class="nav-link" href="#navbar-collapse" data-toggle="collapse" role="button" aria-expanded="false" aria-controls="navbar-collapse">Tra cứu - Định vị<i class="fas fa-caret-down" style="margin-left: 99px;"></i></a>
                            <div class="collapse" id="navbar-collapse">
                                <ul>
                                    <li><a href="#"><i class="fas fa-map-marker-alt"></i>Định vị bưu gửi</a></li>
                                    <li>
                                        <div id="package-search">
                                            <input class="form-control" type="text" name="packageCode" placeholder="Nhập mã bưu gửi" />
                                            <input class="btn btn-primary" style="width:38px; height: 38px;" /><i id="package-code-icon" class="fas fa-search"></i>
                                        </div>
                                    </li>
                                    <li><a href="#"><i class="far fa-money-bill-alt"></i>Định vị chuyển tiền</a></li>
                                    <li><a href="#"><i class="far fa-map"></i>Mạng lưới bưu cục</a></li>
                                    <li><a href="#"><i class="fas fa-ban"></i>Tra cứu hàng cấm gửi</a></li>
                                    <li><a href="#"><i class="fas fa-search-plus"></i>Tra cứu kỳ trước KHL</a></li>
                                    <li><a href="#"><i class="fas fa-qrcode"></i>Mã địa chỉ bưu chính</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item hover-bg-blue">
                            <a class="nav-link" href="#">Bưu chính chuyển phát</a>
                        </li>
                        <li class="nav-item hover-bg-blue">
                            <a class="nav-link" href="#">Tài chính bưu chính</a>
                        </li>
                        <li class="nav-item hover-bg-blue">
                            <a class="nav-link" href="#">Phân phối truyền thông</a>
                        </li>
                        <li class="nav-item hover-bg-blue">
                            <a class="nav-link" href="@Url.Action("NewsIndex","Home")">Tin tức</a>
                        </li>
                        <li class="nav-item hover-bg-blue">
                            <a class="nav-link" href="#">EMAIL</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>

    </header>
    <div>
        @RenderBody()
    </div>

    <footer class="container-fluid">
        <div id="upper-footer" class="container-fluid d-flex justify-content-around align-items-center">
            <div id="col1" class="restyle-list">
                <span><b>Bưu chính chuyển phát</b></span>
                <ul>
                    <li><a href="#">Bưu chính chuyển phát trong nước</a></li>
                    <li><a href="#">Bưu chính chuyển phát quốc tế</a></li>
                </ul>
            </div>
            <div id="col2" class="restyle-list">
                <span><b>Tài chính bưu chính</b></span>
                <ul>
                    <li><a href="#">Bảo hiểm phi nhân thọ PTI</a></li>
                    <li><a href="#">Thu hộ - Chi hộ</a></li>
                    <li><a href="#">Đại lý Bảo hiểm nhân thọ (Dai-chi)</a></li>
                    <li><a href="#">Đại lý ngân hàng</a></li>
                    <li><a href="#">Dịch vụ chuyển tiền trong nước</a></li>
                </ul>
            </div>
            <div id="col3" class="restyle-list">
                <span><b>Phân phối - Truyên thông</b></span>
                <ul>
                    <li><a href="#">Sàn phương mại điện tử POSTMART</a></li>
                    <li><a href="#">Truyền thông quảng cáo</a></li>
                    <li><a href="#">Phân phối xuất bản ấn phẩm</a></li>
                    <li><a href="#">Dịch vụ viễn thông - CNTT</a></li>
                    <li><a href="#">Dịch vụ phân phối hàng hóa</a></li>
                </ul>
            </div>
        </div>
        <div id="lower-footer" class="d-flex justify-content-around align-items-center">
            <div id="lower-footer-left">
                <span><b>Tổng công ty bưu điện việt nam - VIETNAM POST</b></span>
                <p>Địa chỉ: Số 05 đường Phạm Hùng - Mỹ Đình 2 - Nam Từ Liêm - Hà Nội - Việt Nam </p>
                <p>Ghi rõ nguồn "www.vnpost.vn" khi phát hành lại thông tin từ website này </p>
            </div>
            <div id="lower-footer-right" class="d-flex justify-content-center align-items-center">
                <div class="social-icon">
                    <a href="#">
                        <i class="fas fa-phone-square-alt"></i>
                        <span>Tel</span>
                    </a>
                </div>
                <div class="social-icon">
                    <a href="#">
                        <i class="fab fa-facebook-square"></i>
                        <span>Facebook</span>
                    </a>
                </div>
                <div class="social-icon">
                    <a href="#">
                        <img src="~/Images/zalo.png" />
                        <span>Zalo</span>
                    </a>
                </div>
                <div class="social-icon">
                    <a href="#">
                        <img src="~/Images/viber.png" />
                        <span>Viper</span>
                    </a>
                </div>
                <div class="social-icon">
                    <a href="#">
                        <i class="fab fa-youtube"></i>
                        <span>Youtube</span>
                    </a>
                </div>
                <div class="social-icon">
                    <a href="#">
                        <i class="far fa-envelope"></i>
                        <span>Email</span>
                    </a>
                </div>
                <div class="social-icon">
                    <a href="#">
                        <i class="fas fa-rss"></i>
                        <span>RSS</span>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <!--add bootstrap js, popper, jquery-->
    <script src="~/lib/plugins/jquery.min.js"></script>
    <script src="~/lib/plugins/bootstrap.bundle.min.js"></script>
    <!--my js-->
    <script src="~/js/Index.js"></script>
    @RenderSection("AJAX", required: false);
</body>
</html>
